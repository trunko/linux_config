[colors]

bg=${xrdb:background}
blk=${xrdb:color0}
red=${xrdb:color1}
grn=${xrdb:color2}
ylw=${xrdb:color3}
blu=${xrdb:color4}
mag=${xrdb:color5}
cyn=${xrdb:color6}
wht=${xrdb:color7}
fg=${xrdb:foreground}

[bar/bar]
font-0 = "Noto Mono:pixelsize=12;2"
monitor = "eDP-1"
foreground=${colors.fg}
background=${colors.bg}
fixed-center = true
width = 100%
height = 20
radius = 0.0
border-top-size=5
border-top-color=${colors.bg}
border-bottom-size=5
border-bottom-color=${colors.bg}
spacing=0
padding-left=1
padding-right=1
module-margin-right = 1
modules-left = i3
modules-center = date
modules-right = network break volume break battery 

[module/i3]
strip-wsnumbers = true
type = internal/i3
format = <label-state> <label-mode>
label-focused = %index%
label-focused-foreground = ${colors.bg}
label-focused-background = ${colors.fg}
label-focused-padding = 1
label-unfocused = %index%
label-unfocused-padding = 1
label-visible = %index%
label-visible-padding = 1
label-urgent = %index%
label-urgent-foreground = ${colors.fg}
label-urgent-background = ${colors.bg}
label-urgent-padding = 1

[module/date]
type = internal/date
interval = 1.0
date = %a, %d %b %I:%M %p
label-background=${colors.bg}
label-foreground=${colors.fg}
label-padding=1

[module/battery]
type=internal/battery
full-at=99
battery=BAT1
adapter=ACAD
poll-interval=5
format-charging =<label-charging>
format-discharging =<label-discharging>
format-full =<label-full>
label-charging=Bat:%percentage%%*
label-charging-padding=1
label-charging-background=${colors.bg}
label-charging-foreground=${colors.fg}
label-discharging=Bat:%percentage%%
label-discharging-background=${colors.bg}
label-discharging-foreground=${colors.fg}
label-discharging-padding=1
label-full=Bat:Full
label-full-foreground=${colors.fg}
label-full-background=${colors.bg}
label-full-padding=1
animation-charging-background=${colors.bg}
animation-charging-foreground=${colors.fg}
animation-charging-padding=1
ramp-capacity-padding=1
ramp-capacity-background=${colors.bg}
ramp-capacity-foreground=${colors.fg}
animation-charging-framerate=750

[module/volume]
type=internal/volume
format-volume =<label-volume>
format-muted =<label-muted>
ramp-volume-background=${colors.bg}
ramp-volume-foreground=${colors.fg}
ramp-volume-padding=1
label-volume=Vol:%percentage%%
label-volume-background=${colors.bg}
label-volume-foreground=${colors.fg}
label-volume-padding=1
label-muted=Mute
label-muted-foreground=${colors.fg}
label-muted-background=${colors.bg}
label-muted-padding=1
format-volume-padding=0
format-muted-padding=0

[module/network]
type=internal/network
interface=wlp3s0
interval=3.0
format-connected=<label-connected>
label-connected=%essid%
label-connected-background=${colors.bg}
label-connected-foreground=${colors.fg}
label-connected-padding=1
ramp-signal-background=${colors.bg}
ramp-connected-foreground=${colors.fg}
ramp-signal-padding=1
format-disconnected=<label-disconnected>
label-disconnected-background=${colors.bg}
label-disconnected-padding=1
label-disconnected=Disconnected
ramp-signal-foreground=${colors.fg}

[module/break]
type=custom/text
content=|
content-background=${colors.bg}
content-foreground=${colors.fg}

[settings]
screenchange-reload = true
