[colors]

bg = ${xrdb:background}
blk = ${xrdb:color0}
red = ${xrdb:color1}
grn = ${xrdb:color2}
ylw = ${xrdb:color3}
blu = ${xrdb:color4}
mag = ${xrdb:color5}
cyn = ${xrdb:color6}
wht = ${xrdb:color7}
fg = ${xrdb:foreground}


[bar/bspbar]

font-0 = "Hack:pixelsize=14;3"
monitor = "eDP1"

foreground = ${colors.fg}
background = ${colors.bg}

width = 100%
height = 30
fixed-center = true
radius = 0.0

spacing = 0
padding-left = 1
padding-right = 1

modules-left = bspwm
modules-center = date
modules-right = network break volume break battery


[bar/i3bar]

font-0 = "Noto Mono:pixelsize=12;2"
monitor = "eDP1"

foreground = ${colors.fg}
background = ${colors.bg}

width = 100%
height = 30
fixed-center = true
radius = 0.0

spacing = 0
padding-left = 1
padding-right = 1

modules-left = i3 xwindow
modules-center = date
modules-right = network volume battery


[module/xwindow]

type = internal/xwindow
label = %title%
label-padding = 2


[module/bspwm]

type = internal/bspwm

label-focused = %index%
label-focused-background = ${colors.fg}
label-focused-foreground = ${colors.bg}
label-focused-padding = 1

label-occupied = %index%
label-occupied-padding = 1

label-urgent = %index%
label-urgent-background = ${colors.red}
label-urgent-padding = 1

label-empty =


[module/i3]

type = internal/i3

strip-wsnumbers = true
format = <label-state> <label-mode>

label-focused = %index%
label-focused-foreground = ${colors.bg}
label-focused-background = ${colors.fg}
label-focused-padding = 1

label-unfocused = %index%
label-unfocused-padding = 1

label-visible = %index%
label-visible-padding = 1

label-urgent = %index%
label-urgent-background = ${colors.red}
label-urgent-padding = 1


[module/date]

type = internal/date
interval = 5

date = ""
date-alt = "%m-%d-%Y"

time = "%I:%M %p"
time-alt = " %I:%M %p"

label-background = ${colors.bg}
label-foreground = ${colors.fg}
label-padding = 1
label = %date%%time%


[module/battery]

type = internal/battery
full-at = 99
battery = BAT1
adapter = ACAD
poll-interval = 5

format-charging = <label-charging>
format-discharging = <label-discharging>
format-full = <label-full>

label-charging = Charging: %percentage%
label-charging-foreground = ${colors.fg}
label-charging-background = ${colors.bg}
label-charging-padding = 1

label-discharging = Battery: %percentage%
label-discharging-foreground = ${colors.fg}
label-discharging-background = ${colors.bg}
label-discharging-padding = 1

label-full = Battery: Full
label-full-foreground = ${colors.fg}
label-full-background = ${colors.bg}
label-full-padding = 1


[module/volume]

type=internal/volume

format-volume = <label-volume>
format-muted = <label-muted>

ramp-volume-background = ${colors.bg}
ramp-volume-foreground = ${colors.fg}
ramp-volume-padding = 1

label-volume=Volume: %percentage%
label-volume-background = ${colors.bg}
label-volume-foreground = ${colors.fg}
label-volume-padding = 1

label-muted = Volume: Muted
label-muted-foreground = ${colors.fg}
label-muted-background = ${colors.bg}
label-muted-padding = 1

format-volume-padding = 0
format-muted-padding = 0


[module/network]

type = internal/network

interface = wlp3s0
interval = 3.0

format-connected = <label-connected>
label-connected = %essid%
label-connected-background = ${colors.bg}
label-connected-foreground = ${colors.fg}
label-connected-padding = 1

format-disconnected = <label-disconnected>
label-disconnected = Disconnected
label-disconnected-background = ${colors.bg}
label-disconnected-foreground = ${colors.fg}
label-disconnected-padding = 1


[module/break]

type = custom/text
content = "|"
content-background = ${colors.bg}
content-foreground = ${colors.fg}


[settings]

screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
