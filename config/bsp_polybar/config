[colors]

bg=${xrdb:background}
blk=${xrdb:color0}
red=${xrdb:color1}
grn=${xrdb:color2}
ylw=${xrdb:color3}
blu=${xrdb:color4}
mag=${xrdb:color5}
cyn=${xrdb:color6}
wht=${xrdb:color7}
fg=${xrdb:foreground}

[bar/bar]
font-0 = "Noto Mono:pixelsize=12;2"
monitor = "VGA-1"
foreground=${colors.fg}
background=${colors.bg}
fixed-center = true
width = 100%
height = 20
radius = 0.0
border-top-size=5
border-top-color=${colors.bg}
border-bottom-size=5
border-bottom-color=${colors.bg}
spacing=0
padding-left=1
padding-right=1
module-margin-right = 1
modules-left = bspwm xwindow
modules-right = date

[module/xwindow]
type = internal/xwindow
label = %title%
label-maxlen = 30
label-padding = 2

[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-background = ${colors.bg}
label-focused-underline = ${colors.fg}
label-focused-padding = 2

label-occupied = %index%
label-occupied-padding = 2

label-urgent = %index%
label-urgent-background = ${colors.bg}
label-urgent-padding = 2

label-empty =

[module/date]
type = internal/date
interval = 5
date =
date-alt = " %Y-%m-%d"
time = %I:%M %p
time-alt = %I:%M %p
label-background=${colors.bg}
label-foreground=${colors.fg}
label-padding=1
label = %date% %time%

[module/volume]
type=internal/volume
format-volume =<label-volume>
format-muted =<label-muted>
ramp-volume-background=${colors.bg}
ramp-volume-foreground=${colors.fg}
ramp-volume-padding=1
label-volume=Vol:%percentage%%
label-volume-background=${colors.bg}
label-volume-foreground=${colors.fg}
label-volume-padding=1
label-muted=Mute
label-muted-foreground=${colors.fg}
label-muted-background=${colors.bg}
label-muted-padding=1
format-volume-padding=0
format-muted-padding=0

[module/network]
type=internal/network
interface=wlp3s0
interval=3.0
format-connected=<label-connected>
label-connected=%essid%
label-connected-background=${colors.bg}
label-connected-foreground=${colors.fg}
label-connected-padding=1
ramp-signal-background=${colors.bg}
ramp-connected-foreground=${colors.fg}
ramp-signal-padding=1
format-disconnected=<label-disconnected>
label-disconnected-background=${colors.bg}
label-disconnected-padding=1
label-disconnected=Disconnected
ramp-signal-foreground=${colors.fg}

[module/break]
type=custom/text
content=|
content-background=${colors.bg}
content-foreground=${colors.fg}

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
